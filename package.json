{
  "name": "verenajs",
  "version": "2.0.0",
  "description": "The Vanilla JavaScript Framework for Real Applications - Web, Mobile, Desktop",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "webpack serve --mode development --open --hot",
    "build": "webpack --mode production",
    "build:web": "node compiler/cli.js build --target web",
    "build:mobile": "node compiler/cli.js build --target mobile",
    "build:desktop": "node compiler/cli.js build --target desktop",
    "build:all": "node compiler/cli.js build --target all",
    "test": "jest --passWithNoTests",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{js,jsx,css,scss,html}\"",
    "package": "electron-packager . verenajs --platform=all --arch=x64 --overwrite"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muslihabdiker/vplusplus.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "verenajs",
    "framework",
    "vanilla-javascript",
    "no-virtual-dom",
    "components",
    "visual-builder",
    "cross-platform",
    "electron",
    "capacitor",
    "qt",
    "zeromq",
    "opencv"
  ],
  "author": "Muslih",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/muslihabdiker/vplusplus/issues"
  },
  "homepage": "https://github.com/muslihabdiker/vplusplus#readme",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "@capacitor/cli": "^6.1.2",
    "@capacitor/core": "^6.1.2",
    "axios": "^1.7.7",
    "clean-webpack-plugin": "^4.0.0",
    "electron": "^26.0.0",
    "ethers": "^6.15.0",
    "jose": "^6.1.0",
    "mini-css-extract-plugin": "^2.9.1",
    "mustache": "^4.2.0",
    "node-polyfill-webpack-plugin": "^4.0.0",
    "process": "^0.11.10",
    "styled-components": "^6.1.13",
    "three": "^0.170.0",
    "uuid": "^11.0.2",
    "webpack-obfuscator": "^3.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "chokidar": "^3.5.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.11.0",
    "eslint": "^8.51.0",
    "express": "^4.18.2",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "jest": "^29.4.0",
    "postcss": "^8.4.48",
    "prettier": "^3.1.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.14",
    "terser-webpack-plugin": "^5.3.8",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "webpack-pwa-manifest": "^4.0.0",
    "workbox-cli": "^7.1.0",
    "workbox-webpack-plugin": "^7.1.0"
  },
  "optionalDependencies": {
    "zeromq": "^6.0.0-beta.6"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js",
      "default": "./index.js"
    },
    "./core": {
      "import": "./core/core.js",
      "default": "./core/core.js"
    },
    "./core/zeromq": {
      "import": "./core/zeromq.js",
      "default": "./core/zeromq.js"
    },
    "./core/opencv": {
      "import": "./core/opencv.js",
      "default": "./core/opencv.js"
    },
    "./core/bridges/qt": {
      "import": "./core/bridges/qt.js",
      "default": "./core/bridges/qt.js"
    },
    "./builder": {
      "import": "./builder/index.js",
      "default": "./builder/index.js"
    },
    "./compiler": {
      "import": "./compiler/index.js",
      "default": "./compiler/index.js"
    },
    "./components/*": {
      "import": "./components/*/index.js",
      "default": "./components/*/index.js"
    }
  },
  "files": [
    "index.js",
    "core/",
    "components/",
    "builder/",
    "compiler/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
